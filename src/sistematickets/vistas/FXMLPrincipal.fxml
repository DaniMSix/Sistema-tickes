<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistematickets.vistas.FXMLPrincipalController">
   <children>
      <ImageView fitHeight="480.0" fitWidth="720.0" layoutY="1.0" pickOnBounds="true">
         <image>
            <Image url="@../img/background.jpg" />
         </image>
      </ImageView>
      <MenuBar prefHeight="25.0" prefWidth="720.0">
        <menus>
          <Menu mnemonicParsing="false" text="Tickets">
            <items>
              <MenuItem mnemonicParsing="false" text="Quejas" />
                  <MenuItem mnemonicParsing="false" text="Reclamos" />
                  <MenuItem mnemonicParsing="false" onAction="#abrirVentanaSugerencias" text="Sugerencias" />
                  <MenuItem mnemonicParsing="false" text="Peticiones" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Administracion">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#abrirVentanaHistorialReportes" text="Historial de Reportes" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
